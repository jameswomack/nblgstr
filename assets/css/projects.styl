ul#instances
  li
    padding-top: 24px
    padding-bottom: 24px
    a
      margin-left: 12px
      width: 120px
    span, a
      display: inline-block
    span.title, span.title a
      width: 320px
      text-align: left
      text-transform uppercase
    span.title a
      text-align center
    span.ordinal
      margin-right: 8px

form
  width: 380px
  margin: 0px auto 36px auto
  border-radius: 12px
  background-color: rgba(255,255,255,0.3)
  padding: 12px 12px 36px 12px

label>span:first-child
  width: 100px
  margin: 10px
  text-align: right
  display: inline-block
  vertical-align: middle

span.modelValue, span.modelValueInline
  text-align: left
  color: #ccc
  display: inline
  float: left

div.modelValueInlineContainer
  display: inline-block
  width: 200px
  vertical-align: middle

input[type=text], textarea, span.modelValue
  width: 200px

button.camera, div.camera
  height: 50px
  width: 60px
  margin: 10px auto
  z-index: 1000
  position: absolute
  top: 112px
  left: 160px
  border-radius: 2px
  box-shadow:inset 0 1px 0 rgba(255,255,255,0.5)
  font-family: base_font_family
  background: url(/img/camera.png) no-repeat 12px 8px, linear-gradient(top, #fff, #f2f2f2)
  border-color: #e1e1e1

div#other_container
    width 300px
    margin 12px auto
    div.map
      height 360px
      #map
        height: 360px
        .leaflet-popup-content
          strong
            color black
            font 12px base_font_family

div.camera_container
  height: 68px
  width: 100%
  margin-bottom: -48px
  position: relative

p#project
  margin-bottom -40px
  font-style italic
  color #ccc

div#container
  height 600px
  overflow hidden
  position relative

div#ulContainer
  height 600px
  overflow scroll
  position relative

div#ulContainerMask, div#ulContainerMaskTop
  position absolute
  width 100%
  z-index 100

div#ulContainerMask
  pointer-events: none
  background: linear-gradient(top, rgba(0,0,0,0), rgba(0,0,0,1))
  top 460px
  height 140px

div#ulContainerMaskTop
  background: linear-gradient(bottom, rgba(0,0,0,0), rgba(0,0,0,1))
  top 0px
  height 20px

div.project_picture
  margin: 0px auto 12px auto

div.project_picture img
  max-height: 150px
  max-width: 300px
  border-radius: 12px